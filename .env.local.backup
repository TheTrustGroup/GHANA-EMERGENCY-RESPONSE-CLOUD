# Database Configuration
# PostgreSQL connection string for Prisma
DATABASE_URL="postgresql://user:password@localhost:5432/ghana_emergency_db?schema=public"

# NextAuth.js Configuration
# Generate a secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Mapbox Configuration
# Get your token from https://account.mapbox.com/access-tokens/
MAPBOX_TOKEN="your-mapbox-access-token"

# AWS S3 Configuration (for file uploads)
AWS_S3_BUCKET="ghana-emergency-response-bucket"
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_REGION="us-east-1"

# Africa's Talking SMS/Phone API
# Get credentials from https://account.africastalking.com/
AFRICAS_TALKING_API_KEY="your-africas-talking-api-key"
AFRICAS_TALKING_USERNAME="your-africas-talking-username"

# Pusher Configuration (for real-time updates)
# Get credentials from https://dashboard.pusher.com/
PUSHER_APP_ID="your-pusher-app-id"
PUSHER_KEY="your-pusher-key"
PUSHER_SECRET="your-pusher-secret"
PUSHER_CLUSTER="us2"

# Application URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

