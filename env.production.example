# Production Environment Variables
# Copy this file to .env.production and fill in actual values
# NEVER commit .env.production to git

# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://user:password@host:5432/ghana_emergency_prod?schema=public"

# ============================================
# AUTHENTICATION
# ============================================
NEXTAUTH_URL="https://emergency.gov.gh"
NEXTAUTH_SECRET="<generate-strong-secret-32-chars-minimum>"

# ============================================
# ENCRYPTION
# ============================================
ENCRYPTION_MASTER_KEY="<generate-strong-key-32-chars-minimum>"

# ============================================
# MAPBOX
# ============================================
NEXT_PUBLIC_MAPBOX_TOKEN="<your-production-mapbox-token>"

# ============================================
# PUSHER (Real-time Updates)
# ============================================
PUSHER_APP_ID="<production-app-id>"
NEXT_PUBLIC_PUSHER_KEY="<production-key>"
PUSHER_SECRET="<production-secret>"
NEXT_PUBLIC_PUSHER_CLUSTER="<cluster-region>"

# ============================================
# AWS S3 (File Storage)
# ============================================
AWS_ACCESS_KEY_ID="<production-access-key>"
AWS_SECRET_ACCESS_KEY="<production-secret-key>"
AWS_REGION="af-south-1"
AWS_S3_BUCKET_NAME="ghana-emergency-reports-prod"

# ============================================
# EMAIL SERVICE
# Choose one provider:
# ============================================

# Option 1: AWS SES
AWS_SES_REGION="af-south-1"
EMAIL_FROM="noreply@emergency.gov.gh"

# Option 2: SendGrid
# SENDGRID_API_KEY="<production-key>"

# Option 3: Africa's Talking
# AFRICASTALKING_EMAIL_API_KEY="<production-key>"
# AFRICASTALKING_EMAIL_USERNAME="<username>"

# ============================================
# SMS SERVICE
# ============================================
SMS_PROVIDER="africas_talking" # Options: "africas_talking", "twilio"
AFRICASTALKING_API_KEY="<production-key>"
AFRICASTALKING_USERNAME="<username>"
# OR for Twilio:
# TWILIO_ACCOUNT_SID="<account-sid>"
# TWILIO_AUTH_TOKEN="<auth-token>"
# TWILIO_PHONE_NUMBER="<phone-number>"

# ============================================
# REDIS (Rate Limiting & Caching)
# ============================================
REDIS_URL="redis://host:6379"
REDIS_PASSWORD="<production-password>"

# ============================================
# MONITORING (Optional but Recommended)
# ============================================
SENTRY_DSN="<production-dsn>"
SENTRY_ENVIRONMENT="production"

# ============================================
# APPLICATION
# ============================================
NODE_ENV="production"
PORT="3000"
LOG_LEVEL="info"

# ============================================
# SECURITY
# ============================================
# Enable additional security features
ENABLE_RATE_LIMITING="true"
ENABLE_CSRF_PROTECTION="true"
ENABLE_AUDIT_LOGGING="true"

# ============================================
# FEATURE FLAGS (Optional)
# ============================================
ENABLE_SMS_NOTIFICATIONS="true"
ENABLE_EMAIL_NOTIFICATIONS="true"
ENABLE_REPORT_GENERATION="true"

